.card-index
  .card-index__title
    %h2 支払い方法
  .card-index__contents
    %h3 クレジットカード
    .card-index__contents__block
      .card-index__contents__block__details
        .card-index__contents__block__details__number
          = '**** **** ****' + @default_card_infomation.last4 
        .card-index__contents__block__details__expiration
          - exp_month = @default_card_infomation.exp_month.to_s
          - exp_year = @default_card_infomation.exp_year.to_s.slice(2,3)
          = '有効期限' + exp_month + '/' + exp_year
      .card-index__contents__block__delete
        = link_to '削除する', credit_card_path(@default_card_infomation.id), method: :delete
  
