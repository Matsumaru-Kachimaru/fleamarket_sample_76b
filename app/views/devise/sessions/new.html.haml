
.header
  = image_tag 'logo.png',size:"140x41",alt:"ロゴ",class:"logo"
.content
  .content_body
    .text
      アカウントをお持ちでない方はこちら。
      .text_new
        .text_new_regist
          =link_to"新規会員登録",new_user_registration_path

    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .content_body_name
        .field
          .field_box
            = f.label :メールアドレス
            %br/
          = f.email_field :email,:size=>"38", autofocus: true, autocomplete: "email",placeholder: "メールアドレス"
        .field
          .field_box
            = f.label :パスワード
            %br/
          - if @minimum_password_length
            %em
          = f.password_field :password, :size=>"38",autocomplete: "new-password", pattern:"[a-zA-Z0-9]+",placeholder:"パスワード"
      -
      .actions
        = f.submit "ログイン",class:"btn"
      .box

= render "items/footer"



