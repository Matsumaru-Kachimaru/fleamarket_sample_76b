.header
  = image_tag 'logo.png',size:"140x41",alt:"ロゴ",class:"logo"
.content
  .content_body
    %h2 住所情報登録
    = form_for @sending_destination do |f|
      = render "devise/shared/error_messages", resource: @sending_destination
      .content_body_name

      .name
        .field
          .field_boxtwo
            = f.label :お名前
            .mustbox
              必須
          .namebox
            .field
              = f.text_field :destination_family_name, :size=>"15",autofocus: true, autocomplete: "destination_first_name",placeholder: "例）山田"
            .field
              = f.text_field :destination_first_name, :size=>"15",autofocus: true, autocomplete: "destination_family_name",placeholder: "例）太郎"

      .name
        .field
          .field_boxtwo
            = f.label :お名前カナ
            .mustbox
              必須
          .namebox
            .field
              = f.text_field :destination_family_name_kana, :size=>"15",autofocus: true, autocomplete: "destination_first_name_kana",placeholder: "例）ヤマダ"
            .field
              = f.text_field :destination_first_name_kana, :size=>"15",autofocus: true, autocomplete: "destination_family_name_kana",placeholder: "例）タロウ"
      .name
        .field
          .field_three
            = f.label :郵便番号    
            .mustbox
              必須
            %br/
          = f.text_field :post_code,:size=>"38", autofocus: true, autocomplete: "post_code",placeholder: "例）1234567"
      .name
        .field
          .field_three
            = f.label :prefecture_id,'都道府県'
            .mustbox
              必須
            %br/
          = f.collection_select :prefecture_name, JpPrefecture::Prefecture.all, :name, :name, include_blank: true, prompt: "選択してください"
              
          -#   .mustbox
          -#     必須
          -#   %br/
          -# = f.text_field :prefecture_code,:size=>"38", autofocus: true, autocomplete: "prefecture_code",placeholder: "例）北海道"
      .name
        .field
          .field_three
            = f.label :市町村区
            .mustbox
              必須
            %br/
          = f.text_field :City,:size=>"38", autofocus: true, autocomplete: "City",placeholder: "例）名古屋市中区"

      .name
        .field
          .field_three
            = f.label :番地
            .mustbox
              必須
            %br/
          = f.text_field :address,:size=>"38", autofocus: true, autocomplete: "address",placeholder: "例）栄1−1−1"

      .name
        .field
          .field_three
            = f.label :マンション
            .anybox
              任意
            %br/
          = f.text_field :building_name,:size=>"38", autofocus: true, autocomplete: "building_name",placeholder: "例）栄ビル101"

      .name
        .field
          .field_three
            = f.label :電話番号
            .anybox
              任意
            %br/
          = f.telephone_field :phone_number,:size=>"38", autofocus: true, autocomplete: "phone_number",placeholder: "例）09012345678"
      .actions
        = f.submit "次へ進む",class:"btn"

              
= render "items/bottom_banner"
= render "items/footer"



    